@using Dentistry.ViewModels.Catalog.Tags
@model List<TagsVm>
<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .form-container {
        width: 50%;
        padding: 5px;
        border-radius: 8px;
    }

    .form-control {
        border-radius: 6px 0 0 6px;
        border-right: none;
    }

    .btn-add {
        border-radius: 0 6px 6px 0;
    }

        .btn-add:hover {
            background-color: #218838;
        }

    .tag-action {
        width: 80px;
        text-align: center;
    }
</style>
<div class="container-fluid p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Tags</h2>
        <button class="btn btn-primary add-btn" data-bs-toggle="modal" data-bs-target="#addEditTagsModal" data-id="0">Thêm mới</button>
        @* <div class="form-container">
            <div class="input-group">
                <input type="text" class="form-control" id="itemAddTagInput" placeholder="Tag...">
                <button type="button" class="btn btn-success btn-add-tag">
                    <i class="fas fa-plus"></i> Add Tag
                </button>
            </div>
        </div> *@
    </div>
    
    <div class="table-responsive">
        <table id="tagsTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th class="tag-action">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Rows -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle tag-action">
                            <button class="btn btn-sm btn-warning edit-btn" data-bs-toggle="modal" data-bs-target="#addEditTagsModal" data-id="@item.Id">Sửa</button>
                            <button class="btn btn-sm btn-danger delete-btn" onclick="deleteTags(@item.Id)">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    

</div>


<!-- Add Tags Modal -->
<div class="modal fade" id="addEditTagsModal" tabindex="-1" aria-labelledby="addEditTagsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>



<script type="text/javascript" src="~/js/tags.js"></script>