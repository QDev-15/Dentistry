@using Dentistry.ViewModels.Catalog.Tags
@model List<TagsVm>
<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .form-container {
        width: 50%;
        margin: 50px auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 6px 0 0 6px;
        border-right: none;
    }

    .btn-add {
        border-radius: 0 6px 6px 0;
    }

        .btn-add:hover {
            background-color: #218838;
        }
</style>
<div class="container-fluid p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Tags</h2>
        <button class="btn btn-primary add-btn" data-bs-toggle="modal" data-bs-target="#addEditTagsModal" data-id="0">Thêm mới</button>
    </div>

    <div class="table-responsive">
        <table id="tagsTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Rows -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">
                            <button class="btn btn-sm btn-warning edit-btn" data-bs-toggle="modal" data-bs-target="#addEditTagsModal" data-id="@item.Id">Sửa</button>
                            <button class="btn btn-sm btn-danger delete-btn" onclick="deleteTags(@item.Id)">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-container">
        <form id="addForm">
            <div class="input-group">
                <input type="text" class="form-control" id="itemInput" placeholder="Nhập nội dung..." required>
                <button type="submit" class="btn btn-success btn-add">
                    <i class="fas fa-plus"></i> Thêm mới
                </button>
            </div>
        </form>
    </div>

</div>


<!-- Add Tags Modal -->
<div class="modal fade" id="addEditTagsModal" tabindex="-1" aria-labelledby="addEditTagsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
        </div>
    </div>
</div>




<script>
    document.getElementById("addForm").addEventListener("submit", function(event) {
        event.preventDefault();
        const inputValue = document.getElementById("itemInput").value;
        if (inputValue.trim() !== "") {
            alert("Đã thêm: " + inputValue);
            document.getElementById("itemInput").value = ""; // Reset input
        }
    });
</script>



<script src="~/js/tags.js"></script>