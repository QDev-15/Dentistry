
@using Dentistry.ViewModels.Catalog.Slide
@model List<SlideVm>

<div id="slide-page" class="p-3">
    <h2>Slides</h2>
    <div class="d-flex py-2 justify-content-end">
        <a class="btn btn-primary nav-partial" id="btnAddSlide" asp-controller="Slide" asp-action="AddEdit">Thêm mới</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Tiêu đề</th>
                <th>Tiêu đề phụ</th>
                <th>Nội dung</th>
                <th>Link</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slide in Model)
            {
                <tr>
                    <td><img src="@slide.Image.Path" alt="@slide.Name" style="width: 100px; height: auto;" /></td>
                    <td>@slide.Name</td>
                    <td>@slide.SubName</td>
                    <td>@slide.Description</td>
                    <td>@slide.Url</td>
                    <td>@(slide.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        
                        <form asp-action="Delete" asp-controller="Slide" method="post">
                            <input type="hidden" name="id" value="@slide.Id" />
                            <a href="@Url.Action("AddEdit", "Slide", new { id = slide.Id })" class="btn btn-primary nav-partial">Edit</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>