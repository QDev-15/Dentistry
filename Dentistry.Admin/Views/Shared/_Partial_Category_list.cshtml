@using Dentistry.ViewModels.Catalog.Categories
@model List<CategoryVm>
<div class="container-fluid p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh mục chính</h2>
        <button class="btn btn-primary add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditCategoryModal" data-id="0">Add New</button>
    </div>

    <div class="table-responsive">
        <table id="categoryTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Tên rút gọn</th>
                    <th>Thứ tự</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Rows -->
                @foreach (var item in Model)
                {
                    if (item.Parent == null) {
                        <tr>
                            <td class="align-middle">@item.Name</td>
                            <td class="align-middle">@item.Alias</td>
                            <td class="align-middle">@item.Sort</td>
                            <td class="align-middle">
                                <button class="btn btn-sm btn-warning add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditCategoryModal" data-id="@item.Id">Edit</button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container-fluid p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh mục phụ</h2>
        <button class="btn btn-primary add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditCategoryModal" data-type="sub" data-id="0">Add New</button>
    </div>

    <div class="table-responsive">
        <table id="subCategoryTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Tên rút gọn</th>
                    <th>Danh mục chính</th>
                    <th>Thứ tự</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Rows -->
                @foreach (var item in Model)
                {
                    if (item.Parent != null)
                    {
                        <tr>
                            <td class="align-middle">@item.Name</td>
                            <td class="align-middle">@item.Alias</td>
                            <td class="align-middle">@item.Parent.Name</td>
                            <td class="align-middle">@item.Sort</td>
                            <td class="align-middle">
                                <button class="btn btn-sm btn-warning add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditCategoryModal" data-type="sub" data-id="@item.Id">Edit</button>
                                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="addEditCategoryModal" tabindex="-1" aria-labelledby="addEditCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            
        </div>
    </div>
</div>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this category?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/js/category.js"></script>
