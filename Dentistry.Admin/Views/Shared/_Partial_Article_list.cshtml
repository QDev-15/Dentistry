@using Dentistry.ViewModels.Catalog.Articles
@model List<ArticleVm>
<div class="container-fluid p-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh mục bài viết</h2>
        <button class="btn btn-primary add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditArticleModal" data-id="0">Add New</button>
    </div>

    <div class="table-responsive">
        <table id="categoryTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Bài viết</th>
                    <th>Đanh mục</th>
                    <th>Người viết</th>
                    <th>Ngày tạo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Rows -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Title</td>
                        <td class="align-middle">@item.Category.Name</td>
                        <td class="align-middle">@item.CreatedBy.DisplayName ?? @item.CreatedBy.UserName</td>
                        <td class="align-middle">@item.CreatedDate</td>
                        <td class="align-middle">
                            <button class="btn btn-sm btn-warning add-edit-btn" data-bs-toggle="modal" data-bs-target="#addEditArticleModal" data-id="@item.Id">Edit</button>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Article Modal -->
<div class="modal fade" id="addEditArticleModal" tabindex="-1" aria-labelledby="addArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addArticleModalLabel">Thêm bài viết mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addArticleForm">
                    <div class="mb-3">
                        <label for="title" class="form-label">Tiêu đề</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tiêu đề bài viết" required>
                    </div>
                    <div class="mb-3">
                        <label for="thumbnail" class="form-label">Ảnh bài viết</label>
                        <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <label for="contentEditor" class="form-label">Nội dung</label>
                        <textarea id="contentEditor" name="content"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" form="addArticleForm" class="btn btn-primary">Lưu bài viết</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/tinymce.js"></script>
<script type="text/javascript" src="~/js/article.js"></script>

