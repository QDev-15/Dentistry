@model MenuLeftViewModel

<div class="sb-sidenav-menu" id="left-menu">
    <div class="nav">
        <div class="sb-sidenav-menu-heading">Quảng lý Trang chủ</div>
        <a class="nav-link" asp-controller="Home" asp-action="Index">
            <div class="sb-nav-link-icon">
                <i class="fa-solid fa-home"></i>
            </div>
            Trang chủ
        </a>
        <a class="nav-link" asp-controller="Home" asp-action="Settings">
            <div class="sb-nav-link-icon">
                <i class="fa-solid fa-gear"></i>
            </div>
            Cài đặt trang
        </a>
        <a class="nav-link" asp-controller="Articles" asp-action="Index">
            <div class="sb-nav-link-icon"><i class="fa-solid fa-newspaper"></i></div>
            Bài Viết
        </a>


        <div class="sb-sidenav-menu-heading">Hệ thống</div>
        <a class="nav-link" asp-controller="User" asp-action="Index">
            <div class="sb-nav-link-icon">
                <i class="fa-solid fa-user"></i>
            </div>
            Người dùng
        </a>
        <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#collapseDanhMuc" aria-expanded="true" aria-controls="collapseDanhMuc">
            <div class="sb-nav-link-icon">
                <i class="fas fa-cogs"></i>
            </div>
            Quản lý chung
            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
        </a>
        <div class="collapse show" id="collapseDanhMuc" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
            <nav class="sb-sidenav-menu-nested nav">
                <a class="nav-link" asp-controller="Access" asp-action="Index">
                    <div class="sb-nav-link-icon">
                        <i class="fa-solid fa-network-wired"></i>
                    </div>
                    Lượng truy cập
                </a>
                <a class="nav-link" asp-controller="Logger" asp-action="Index">
                    <div class="sb-nav-link-icon">
                        <i class="fas fa-bug"></i>
                    </div>
                    Logger
                </a>
            </nav>
        </div>
    </div>
</div>
<div class="sb-sidenav-footer">
    <div class="small">Logged in as:</div>
    @{
        if (string.IsNullOrEmpty(Model.CurrentUser.DisplayName))
        {
            @Model.CurrentUser.Email
        }
        else
        {
            @Model.CurrentUser.DisplayName
        }
    }
</div>