@using Dentistry.ViewModels.Catalog.Branches;
@model BranchesVm
@{
    Layout = null;
}

<div class="modal-header">
    @if (Model.Id == 0)
    {
        <h5 class="modal-title" id="addBranchesModalLabel">Thêm mới</h5>
    }
    else
    {
        <h5 class="modal-title" id="addBranchesModalLabel">Cập nhật</h5>
    }
    <button type="button" class="btn-close action-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="addBranchesForm" asp-action="AddEdit" asp-controller="Branches" method="post" class="needs-validation" validate>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Tên</label>
            <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Cơ sở" required>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label">Số điện thoại</label>
            <input type="text" class="form-control" asp-for="@Model.PhoneNumber" placeholder="Số điện thoại" required>
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="checkbox" asp-for="@Model.IsActive" />
            <label asp-for="@Model.IsActive">Hoạt động</label>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label">Địa chỉ</label>
            <textarea asp-for="@Model.Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
    </form>
</div>
<div class="modal-footer d-flex justify-content-center">
    <button type="button" class="btn btn-secondary action-close" data-bs-dismiss="modal">Hủy</button>
    <button type="submit" form="addBranchesForm" class="btn btn-primary">Lưu</button>
</div>


