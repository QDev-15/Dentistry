@model SettingsViewModel
@{
    ViewData["Title"] = "Cài đặt Trang Chủ";
}
<div class="container-fluid px-0 py-0">
    <ul class="nav nav-tabs pt-2" id="tabMenu" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="slide-tab" data-bs-toggle="tab" data-tab="slide" data-bs-target="#slide" type="button" role="tab">
                <i class="fa-solid fa-sliders me-2"></i>Slides
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="category-tab" data-bs-toggle="tab" data-tab="category" data-bs-target="#category" type="button" role="tab">
                <i class="fa fa-solid fa-list me-2"></i> Danh mục
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="doctor-tab" data-bs-toggle="tab" data-tab="doctor" data-bs-target="#doctor" type="button" role="tab">
                <i class="fas fa-user-md"></i> Bác sĩ 
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-tab="tab2" data-bs-target="#tab2" type="button" role="tab">Tab 2</button>
        </li>
    </ul>
    <div class="tab-content" id="tabContent">
        <!-- Slide -->
        <div class="tab-pane p-2 fade show active" id="slide" role="tabpanel">
            @{
                Html.RenderPartial("_Partial_Slide_list", Model.Slides);
            }
        </div>
        <!-- category -->
        <div class="tab-pane p-2 fade" id="category" role="tabpanel">
            @{
                Html.RenderPartial("_Partial_Category_list", Model.Categories);
            }
        </div>
        <!-- doctor -->
        <div class="tab-pane p-2 fade" id="doctor" role="tabpanel">
            @await Component.InvokeAsync("DoctorList")
        </div>
        <!-- Tab 2 -->
        <div class="tab-pane p-2 fade" id="tab2" role="tabpanel">
            <p>Content for Tab 2</p>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/home-settings.js"></script>
