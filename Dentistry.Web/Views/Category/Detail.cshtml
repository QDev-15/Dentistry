@using Dentistry.ViewModels.Catalog.Categories
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model CategoryVm
<div class="container-fluid image-banner p-0">
    <img src="@Model.Image?.Path" />
</div>
<div class="container-fluid">
    <div class="container box_breadcrumb">
        <ul class="breadcrumb">
            <li><a href="/">Trang chủ</a></li>
            <li><a href="/danh-muc/@Model.Alias" title="@Model.Name">@Model.Name</a></li>
        </ul>
    </div>
</div>
@{
    if (Model.ChildCategories.Any()) {
        <div class="container-fluid p-0 box_categories">
            <div class="container">
                @{
                    Html.RenderPartial("~/Views/ViewComponents/HomeCategory.cshtml", @Model.ChildCategories.ToList());
                }
            </div>
        </div>

    }
}
