@using Dentistry.ViewModels.Catalog.Categories
@model CategoryVm



@{
    Html.RenderPartial("~/Views/Category/Partials/_showCategoryDescription.cshtml", Model);
}

@{
    if (Model.ChildCategories.Any())
    {
        ViewBag.CategoryProductTitle = Model.Name;
        Html.RenderPartial("~/Views/Category/Partials/_listCategoryProducts.cshtml", new CategoryBox() { Items = Model.ChildCategories, Title = Model.Name });
    }
}