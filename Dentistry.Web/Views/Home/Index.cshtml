@using Dentistry.ViewModels.Catalog.AppSettings
@using Dentisty.Web.Services
@inject ApplicationService _applicationService
@{
    var application = await _applicationService.GetApplication();
}
@{

    @await Component.InvokeAsync("HomeMainSlide")

    if (application.Settings.ShowCategoryList)
    {
        @await Component.InvokeAsync("HomeCategorySlide")
    }

    if (application.Settings.ShowDoctorSlideList)
    {
        @await Component.InvokeAsync("HomeDoctorSlide")
    }
    if (application.Settings.ShowArtileSlideList)
    {
        @await Component.InvokeAsync("HomeArticleSlide")
    } 
    if (application.Settings.ShowNewsList)
    {
        @await Component.InvokeAsync("HomeArticleNews")
    }
    if (application.Settings.ShowProductList)
    {
        @await Component.InvokeAsync("HomeArticleProduct")
    }
    if (application.Settings.ShowFeedbackList)
    {
        @await Component.InvokeAsync("HomeArticleFeedBack")
    }
}


