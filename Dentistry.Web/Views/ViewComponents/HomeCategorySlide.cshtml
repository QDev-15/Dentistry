@using Dentistry.Common
@using Dentistry.ViewModels.Catalog.Categories
@using Dentistry.ViewModels.Enums
@using Dentisty.Web.Services
@inject ApplicationService _applicationService
@{
    var setting = await _applicationService.GetAppSetting();
    var productCategories = await _applicationService.GetCategoryProductSlides();
    var categories = await _applicationService.GetCategorySlides();
}

@* Dịch vụ *@
<div class="container-fluid py-4 mt-5 mb-5 section section-category">
    <div class="container categories-content">
        <h1 class="actor-list-header box_title text-center actor-item">@setting.CategoryListTitle</h1>
        <div class="box_title_sub">
            @setting.CategoryListSubTitle
        </div>
        <div class="container">
            <div class="row actor-list justify-content-center">
                <!-- Actor 1 -->
                @foreach (var item in categories)
                {
                    <div class="col-6 col-sm-4 col-md-3 slide-item text-center actor-item">
                        <div class="image">
                            <a asp-controller="Category" asp-action="Detail" asp-route-danhmuc="@item.AliasType" asp-route-alias="@item.Alias">
                                <img src="@item.CoverImage" loading="lazy" alt="@item.Name" onerror="this.onerror=null; this.src='../assets/img/no-image.jpg';" class="actor-image">
                            </a>
                        </div>
                        <div class="info">
                            <h3 class="title">
                                <a asp-controller="Category" asp-action="Detail" asp-route-danhmuc="@item.AliasType" asp-route-alias="@item.Alias" title="@item.Name">
                                    @item.Name
                                </a>
                            </h3>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
@* Sảm phẩm *@
@{
    if (setting.ShowCategoryProductList)
    {
        <div class="container-fluid py-4 mt-5 mb-5 section section-category products">
            <div class="container categories-content">
                <h1 class="actor-list-header box_title text-center actor-item">@setting.CategoryListProductTitle</h1>
                <div class="box_title_sub">
                    @setting.CategoryListProductSubTitle
                </div>
                <div class="container">
                    <div class="row actor-list actor-list-product justify-content-center">
                        <!-- Actor 1 -->
                        @foreach (var item in productCategories)
                        {
                            <div class="col-6 col-sm-4 col-md-3 slide-item text-center actor-item">
                                <div class="image">
                                    <a asp-controller="Category" asp-action="Detail" asp-route-danhmuc="@item.AliasType" asp-route-alias="@item.Alias">
                                        <img src="@item.CoverImage" loading="lazy" alt="@item.Name" onerror="this.onerror=null; this.src='../assets/img/no-image.jpg';" class="actor-image">
                                    </a>
                                </div>
                                <div class="info">
                                    <h3 class="title">
                                        <a asp-controller="Category" asp-action="Detail" asp-route-danhmuc="@item.AliasType" asp-route-alias="@item.Alias" title="@item.Name">
                                            @item.Name
                                        </a>
                                    </h3>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    }
}
<script src="~/js/home-category.js"></script>