<div class="container-fluid box_book section section-contact">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 hidden-xs">
                <img class="image" src="~/assets/img/book.png">
            </div>
            <div class="col-sm-7 col-xs-12">
                <div class="box_wrap">
                    <div class="box_title">Đặt lịch khám tại Nhiên</div>
                    <div class="box_content">
                        <form name="frmBook" id="frmBook">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group" id="input-name">
                                        <input type="text" name="name" class="form-control" placeholder="Họ tên khách hàng *">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group" id="input-phone">
                                        <input type="text" name="phone" class="form-control" placeholder="Số điện thoại liên hệ *">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group" id="input-day">
                                        <input type="text" name="day" class="form-control datepicker hasDatepicker" placeholder="Ngày đặt lịch *" id="dp1732637533339">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group" id="input-location">
                                        <select name="location" class="form-control custom-dropdown">
                                            <option value="">Chọn cơ sở gần bạn *</option>
                                            <option value="Win Smile Lê Duẩn">Win Smile Lê Duẩn</option>
                                            <option value="Win Smile Vũ Trọng Phụng">Win Smile Vũ Trọng Phụng</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="note">* Thông tin của bạn sẽ được bảo mật!</div>
                                    <div class="btnSuccess">
                                        <a href="javascript:;" onclick="javascript:formRegister('frmBook');" class="btn_yellow submit">Đặt lịch</a>
                                        <span class="open">
                                            Giờ làm việc: <br>
                                            <span>8h00 đến 20h00</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
