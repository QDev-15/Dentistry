        <ol class="carousel-indicators">
            @foreach (var (item, index) in Model.Select((item, index) => (item, index)))
            {
                if (index == 0)
                {
                    <li data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="@index" class="active"></li>
                }
                else
                {
                    <li data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="@index"></li>
                }
            }
        </ol>
        <!-- Nội dung các slide -->
        <div class="carousel-inner">
            @foreach (var (item, index) in Model.Select((item, index) => (item, index)))
