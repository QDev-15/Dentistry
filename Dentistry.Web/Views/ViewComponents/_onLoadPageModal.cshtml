<!-- Nút để kích hoạt modal -->
<button type="button" class="btn btn-primary d-none" id="openModal" data-bs-toggle="modal" data-bs-target="#box_popup_tuvan">
    Open Modal
</button>

<!-- Modal Bootstrap -->
<div class="modal fade" id="box_popup_tuvan" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="cover">
                <button type="button" id="close_button_modalOnloadDefaul" class="btn-close position-absolute end-0 m-2" style="z-index: 999;" data-bs-dismiss="modal" aria-label="Close"></button>
                <img src="~/assets/logo/logo nhiên dental clinic done-03.png" alt="Logo">
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Họ tên khách hàng *" required>
                    </div>
                    <div class="mb-3">
                        <input type="tel" class="form-control" placeholder="Số điện thoại *" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" placeholder="Nhu cầu tư vấn" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn_submit w-100">Hoàn thành</button>
                </form>
                <div class="mt-3 hotline">
                    Hotline tư vấn: <a href="tel:19005228">1900 5228</a>
                </div>
                <div class="text mt-2">Đăng ký tư vấn miễn phí!</div>
            </div>
        </div>
    </div>
</div>
<!-- Popup -->
<div id="popup_tuvan">
    <div class="btn_popup" id="openFeedbackModal">
        <span>Đăng ký tư vấn</span>
        <i class="fa-solid fa-clipboard-list"></i>
    </div>
</div>
